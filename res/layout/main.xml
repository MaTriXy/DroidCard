<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="biggerQRCode"
            android:id="@+id/imageView" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:src="@drawable/qr_code_website" android:contentDescription="@string/imageview_qrcode_accessibility"/>
    <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:onClick="shareLink"
            android:src="@drawable/ic_share" android:background="@android:color/transparent"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:padding="20dp"/>
</RelativeLayout>